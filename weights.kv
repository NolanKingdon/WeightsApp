<CustButton@Button>:
    font_size: 32
 
<Floater>:
    id: calculator
    display: entry
    padding: 10
    spacing: 10

    FloatLayout:
        TextInput:
            pos_hint: {"x":0, "y": 0.9}
            size_hint: 1, 0.1
            id: entry
            font_size: 32
            multiline: False
        
    GridLayout:
        rows: 7
        id: numbahs
        BoxLayout:
            Label:
                text: " "
        # Figure out how to just have it adjust to the float layout.
        BoxLayout:
            Label:
                id: output
                text: "Per Side:"
            Label:
                id: pps
                text: "45's:   \n35's:   \n25's:   \n10's:   \n5's:   \n2.5's:   "
            Label:
                id: total
                text: "Total Weight"

        BoxLayout:
            CustButton:
                text: "Clear"
                on_press: entry.text = ""
                on_release: calculator.calculate(entry.text)
            Label:
                text: " "
            CustButton:
                text: "Del"
                on_press: root.delete(entry.text)
                on_release: calculator.calculate(entry.text)                      
        BoxLayout:
            CustButton:
                text: "7"
                on_press: entry.text += self.text
                on_release: calculator.calculate(entry.text)
            CustButton:
                text: "8"
                on_press: entry.text += self.text
                on_release: calculator.calculate(entry.text)
            CustButton:
                text: "9"
                on_press: entry.text += self.text
                on_release: calculator.calculate(entry.text)
        BoxLayout:
            CustButton:
                text: "4"
                on_press: entry.text += self.text
                on_release: calculator.calculate(entry.text)
            CustButton:
                text: "5"
                on_press: entry.text += self.text
                on_release: calculator.calculate(entry.text)
            CustButton:
                text: "6"
                on_press: entry.text += self.text
                on_release: calculator.calculate(entry.text)
        BoxLayout:
            CustButton:
                text: "1"
                on_press: entry.text += self.text
                on_release: calculator.calculate(entry.text)
            CustButton:
                text: "2"
                on_press: entry.text += self.text
                on_release: calculator.calculate(entry.text)
            CustButton:
                text: "3"
                on_press: entry.text += self.text
                on_release: calculator.calculate(entry.text)
        BoxLayout:
            CustButton:
                text: "Bellas"
                on_press: root.bella(total.text)
            CustButton:
                text: "0"
                on_press: entry.text += self.text
                on_release: calculator.calculate(entry.text)
            CustButton:
                text: "Pandas"
                on_press: root.panda(total.text)
  